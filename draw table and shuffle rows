	function buildTable(data){
		var table = document.getElementById('myTable')
    for (var i = 0; i < data.length; i++){
  		var row = `<tr>
							<td>${data[i]["Greek word"]}</td>
							<td>${data[i]["Meaning (Moore College course)"]}</td>
							<td>${data[i]["Frequency in NT"]}</td>
					  </tr>`
			table.innerHTML += row

		}
  }


var shuffleTable = function() {
  myArray.sort(function() { return 0.5 - Math.random() });
}


var drawTable = function() {
  buildTable(myArray);
}

var drawButton = document.getElementById("drawTable");
    // 2. Define the function that will respond to the event.
    // callback 
    var onDrawButtonClick = function() {
        drawButton.textContent = "Oh wow, you clicked me!";
    };
    // 3. Add the event listener for the element and function
    // anonymous "inline"
    drawButton.addEventListener("click", drawTable);



  var shuffleButton = document.getElementById("shuffleTable");
    // 2. Define the function that will respond to the event.
    // callback 
    var onShuffleButtonClick = function() {
        shuffleButton.textContent = "Oh wow, you clicked me!";
    };
    // 3. Add the event listener for the element and function
    // anonymous "inline"
    shuffleButton.addEventListener("click", shuffleTable);


